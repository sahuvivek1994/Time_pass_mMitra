<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Login"
                                             android:background="@color/white">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.06"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.53"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/m_mitra"
            android:id="@+id/imageView"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintVertical_bias="0.795"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.25"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.03"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.95"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/armman"
            android:id="@+id/imageView3"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.6"/>
    <TextView
            android:text="Initiated By "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.04"
            app:fontFamily="monospace" android:textSize="18sp" android:textStyle="italic"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp" android:hint="username"
            android:textSize="18sp"/>


    <Button
            android:id="@+id/button_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_shape"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:text="login" app:layout_constraintHorizontal_bias="0.491"
            android:textSize="24sp" android:textColor="#C40A0A0A" android:textStyle="bold"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="28dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginRight="40dp" app:layout_constraintHorizontal_bias="0.0" android:hint="password"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline7"
            app:layout_constraintGuide_percent="0.88"/>

</android.support.constraint.ConstraintLayout>


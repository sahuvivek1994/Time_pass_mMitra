<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:weightSum="1"
              android:background="#E0E0E0"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewtitle"
        android:text="@string/Diagnostic_Test"
        android:padding="10dp"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/enroll_form"
        android:background="#E0E0E0"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/enroll_form"
    />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout2"
        android:layout_weight="0.7"
        android:layout_gravity="center_horizontal"
        android:background="#E0E0E0"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView"
        android:text="@string/no_referral_msg"
        android:padding="20dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="#E0E0E0"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.1"
        android:text="@string/confirm_dialog"
        android:textSize="25dp"
        android:background="#E0E0E0"
        android:textColor="#212121"
        android:id="@+id/referral_button"/>
</LinearLayout>
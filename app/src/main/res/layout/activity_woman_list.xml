<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/toolbar"
    android:id="@+id/toolbar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/anc_list_view"
        tools:itemCount="8"
        android:layout_below="@id/toolbar"/>

    <include
            layout="@layout/empty_list_layout"
            android:id="@+id/empty_list_layout"
            android:visibility="gone" android:layout_marginBottom="230dp"
            android:layout_alignBottom="@+id/recycler_view"
            android:layout_height="524dp"
            android:layout_width="310dp" android:layout_alignTop="@+id/recycler_view" android:layout_marginTop="144dp"
            android:layout_marginLeft="167dp" android:layout_marginStart="167dp"
            android:layout_alignLeft="@+id/recycler_view" android:layout_alignStart="@+id/recycler_view"
            android:layout_alignRight="@+id/recycler_view" android:layout_marginRight="124dp"
            android:layout_marginEnd="124dp" android:layout_alignEnd="@+id/recycler_view"/>



</RelativeLayout>
